    <class name="generatorview"
	clip="true"
    >


	<attribute name="active" value="true"/>


	<handler name="onactive" args="arg"><![CDATA[
	    //Debug.write("onactive", this.active, this);
	  ]]>
	</handler>


	<simplelayout axis="y"
	    spacing="5"
	/>


	<button
	    text="Generate Random Map"
	    fontsize="18"
	    fontstyle="bold"
	    onclick="this.generateMap()"
	    width="${parent.width}"
	    height="50"
	>

	    <method name="generateMap"><![CDATA[
		gApp.sendCommand('<command name="generateCity"/>');
		gApp.setDescription("Generated a new random map.");
	      ]]>
	    </method>

	</button>


    </class>


</library>
