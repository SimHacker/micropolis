		hotSpot: 1,
		constrained: true,
		handler: 'apptool',
		cost: 100
	    },
	    commercial: {
	        name: 'Commercial',
		description: 'Commercial (tool description)',
	        tiles: 3,
		hotSpot: 1,
		constrained: true,
		handler: 'apptool',
		cost: 100
	    },
	    industrial: {
                name: 'Industrial',
		description: 'Industrial (tool description)',
	        tiles: 3,
		hotSpot: 1,
		constrained: true,
		handler: 'apptool',
		cost: 100
	    },
	    firestation: {
                name: 'Fire Station',
		description: 'Fire Station (tool description)',
	        tiles: 3,
		hotSpot: 1,
		constrained: true,
		handler: 'apptool',
		cost: 500
	    },
	    query: {
                name: 'Query',
		description: 'Query (tool description)',
	        tiles: 1,
		hotSpot: 0,
		constrained: true,
		handler: 'apptool',
		cost: 0
	    },
	    policestation: {
                name: 'Police Station',
		description: 'Police Station (tool description)',
	        tiles: 3,
		hotSpot: 1,
		constrained: true,
		handler: 'apptool',
		cost: 100
	    },
	    wire: {
                name: 'Wire',
		description: 'Wire (tool description)',
	        tiles: 1,
		hotSpot: 0,
		constrained: true,
		handler: 'apptool',
		cost: 5
	    },
	    bulldozer: {
                name: 'Bulldozer',
		description: 'Bulldozer (tool description)',
	        tiles: 1,
		hotSpot: 0,
		constrained: true,
		handler: 'apptool',
		cost: 1
	    },
	    railroad: {
                name: 'Railroad',
		description: 'Railroad (tool description)',
	        tiles: 1,
		hotSpot: 0,
		constrained: true,
		handler: 'apptool',
		cost: 20
	    },
	    road: {
                name: 'Road',
		description: 'Road (tool description)',
	        tiles: 1,
		hotSpot: 0,
		constrained: true,
		handler: 'apptool',
		cost: 10
	    },
	    pacbot: {
                name: 'PacBot',
		description: 'PacBot (tool description)',
	        tiles: 1,
		hotSpot: 0,
		constrained: false,
		handler: 'apptool',
		cost: 1000
	    },
	    center: {
                name: 'Center',
		description: 'Center (tool description)',
	        tiles: 1,
		hotSpot: 0,
		constrained: false,
		handler: 'centertool',
		cost: 0
	    },
	    stadium: {
                name: 'Stadium',
		description: 'Stadium (tool description)',
	        tiles: 4,
		hotSpot: 1,
		constrained: true,
		handler: 'apptool',
		cost: 5000
	    },
	    park: {
                name: 'Park',
		description: 'Park (tool description)',
	        tiles: 1,
		hotSpot: 0,
		constrained: true,
		handler: 'apptool',
		cost: 10
	    },
	    seaport: {
                name: 'Seaport',
		description: 'Seaport (tool description)',
	        tiles: 4,
		hotSpot: 1,
		constrained: true,
		handler: 'apptool',
		cost: 3000
	    },
	    coalpower: {
                name: 'Coal Power',
		description: 'Coal Power (tool description)',
	        tiles: 4,
		hotSpot: 1,
		constrained: true,
		handler: 'apptool',
		cost: 3000
	    },
	    airport: {
                name: 'Airport',
		description: 'Airport (tool description)',
	        tiles: 6,
		hotSpot: 1,
		constrained: true,
		handler: 'apptool',
		cost: 10000
	    },
	    nuclearpower: {
                name: 'Nuclear Power',
