<library>


    <!-- Pan Cursor -->
    <!-- Written for Micropolis -->
    <!-- By Don Hopkins -->
    <!-- Licensed under GPLv3 -->


    <class name="pancursor">


        <attribute name="gap" value="5"/>
        <attribute name="frame" value="1"/>


        <method name="doAnimate"><![CDATA[
	    this.trackCursor();
	  ]]>
	</method>


	<method name="trackCursor"><![CDATA[
	    var x = immediateparent.getMouse('x');
	    var y = immediateparent.getMouse('y');
	    var moved = false;

	    if (this.x != x) {
	        this.setAttribute("x", x);
		moved = true;
	    }
	    if (this.y != y) {
	        this.setAttribute("y", y);
		moved = true;
	    }

	    return moved;
	  ]]>
	</method>


	<view name="cur"
	    x="${-this.width / 2}"
	    y="${-this.height / 2}"
	    resource="cursor_pan_rsrc"
	    frame="${classroot.frame}"
	/>

	<text name="label"
	    bgcolor="0xffffff"
	    fgcolor="0x000000"
	    fontsize="18"
	    fontstyle="bold"
	    resize="true"
	    x="${-this.width / 2}"
	    y="${classroot.cur.y + classroot.cur.height + classroot.gap}"
	    text="${gApp._('Pan Map')}"
	/>

    </class>


</library>
