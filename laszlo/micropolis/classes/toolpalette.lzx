<library>


    <!-- Tool Palette -->
    <!-- Written for Micropolis -->
    <!-- By Don Hopkins -->
    <!-- Licensed under GPLv3 -->


    <class name="toolpalette"
        clip="true"
    >


	<attribute name="active" value="true"/>
	<attribute name="gap" value="5"/>
	<attribute name="leftEdge" value="${this.gap}"/>
	<attribute name="middleEdge" value="${this.width / 2}"/>
	<attribute name="rightEdge" value="${this.width - this.gap}"/>


	<handler name="oninit"><![CDATA[
	    //Debug.write("==== toolpalette oninit", this);
	  ]]>
	</handler>


	<handler name="onactive" args="arg"><![CDATA[
	    //Debug.write("onactive", this.active, this);
	  ]]>
	</handler>


	<handler name="onmousedown" args="arg"><![CDATA[
	    gTileViewPie.popupAtCursor(false);
	  ]]>
	</handler>


	<toolicon name="residential"
	    toolID="residential"
	    x="${parent.leftEdge}"
	    y="${parent.gap}"
	    resource="tool_residential_rsrc"
	    title="Residential"
	/>

	<toolicon name="commercial"
	    toolID="commercial"
	    x="${Math.max(parent.residential.x + parent.residential.width + parent.gap,
	    		  parent.middleEdge - (this.width / 2))}"
	    y="${parent.residential.y}"
	    resource="tool_commercial_rsrc"
	    title="Commercial"
	/>

	<toolicon name="industrial"
	    toolID="industrial"
	    x="${Math.max(parent.commercial.x + parent.commercial.width + parent.gap,
	                  parent.rightEdge - this.width)}"
	    y="${parent.residential.y}"
	    resource="tool_industrial_rsrc"
	    title="Industrial"
	/>

	<toolicon name="firestation"
	    toolID="firestation"
	    x="${parent.leftEdge}"
	    y="${parent.residential.y + parent.residential.height + parent.gap}"
	    resource="tool_firestation_rsrc"
	    title="Fire Station"
	/>

	<toolicon name="query"
	    toolID="query"
	    x="${Math.max(parent.firestation.x + parent.firestation.width,
	                  parent.middleEdge - (this.width / 2))}"
	    y="${parent.firestation.y}"
	    resource="tool_query_rsrc"
	    title="Query"
	/>

	<toolicon name="policestation"
	    toolID="policestation"
	    x="${Math.max(parent.query.x + parent.query.width + parent.gap,
	                  parent.rightEdge - this.width)}"
	    y="${parent.firestation.y}"
	    resource="tool_policestation_rsrc"
	    title="Police Station"
	/>

	<toolicon name="wire"
	    toolID="wire"
	    x="${parent.leftEdge}"
	    y="${parent.firestation.y + parent.firestation.height + parent.gap}"
	    resource="tool_wire_rsrc"
	    title="Wire"
	/>

	<toolicon name="bulldozer"
	    toolID="bulldozer"
	    x="${Math.max(parent.wire.x + parent.wire.width + parent.gap,
	                  parent.rightEdge - this.width)}"
	    y="${parent.wire.y}"
	    resource="tool_bulldozer_rsrc"
	    title="Bulldozer"
	/>

	<toolicon name="railroad"
	    toolID="railroad"
	    x="${parent.leftEdge}"
	    y="${parent.wire.y + parent.wire.height + parent.gap}"
	    resource="tool_railroad_rsrc"
	    title="Railroad"
	/>

	<toolicon name="pan"
	    toolID="pan"
	    x="${Math.max(parent.railroad.x + parent.railroad.width + parent.gap,
	                  parent.middleEdge - (this.width / 2))}"
	    y="${parent.railroad.y}"
	    resource="tool_pan_rsrc"
	    title="Pan"
	/>

	<toolicon name="road"
	    toolID="road"
	    x="${Math.max(parent.pan.x + parent.pan.width + parent.gap,
	                  parent.rightEdge - this.width)}"
	    y="${parent.railroad.y}"
	    resource="tool_road_rsrc"
	    title="Road"
	/>

	<toolicon name="stadium"
	    toolID="stadium"
	    x="${parent.leftEdge}"
	    y="${parent.pan.y + parent.pan.height + parent.gap}"
	    resource="tool_stadium_rsrc"
	    title="Stadium"
	/>

	<toolicon name="park"
	    toolID="park"
	    x="${Math.max(parent.stadium.x + parent.stadium.width + parent.gap,
	                  parent.middleEdge - (this.width / 2))}"
	    y="${parent.stadium.y}"
	    resource="tool_park_rsrc"
	    title="Park"
	/>

	<toolicon name="seaport"
	    toolID="seaport"
	    x="${Math.max(parent.park.x + parent.park.width + parent.gap,
	                  parent.rightEdge - this.width)}"
	    y="${parent.stadium.y}"
	    resource="tool_seaport_rsrc"
	    title="Seaport"
	/>

	<toolicon name="coalpower"
	    toolID="coalpower"
	    x="${parent.leftEdge}"
	    y="${parent.stadium.y + parent.stadium.height + parent.gap}"
	    resource="tool_coalpower_rsrc"
	    title="Coal Power"
	/>

	<toolicon name="airport"
	    toolID="airport"
	    x="${Math.max(parent.coalpower.x + parent.coalpower.width + parent.gap,
	                  parent.middleEdge - (this.width / 2))}"
	    y="${parent.coalpower.y}"
	    resource="tool_airport_rsrc"
	    title="Airport"
	/>

	<toolicon name="nuclearpower"
	    toolID="nuclearpower"
	    x="${Math.max(parent.airport.x + parent.airport.width + parent.gap,
	                  parent.rightEdge - this.width)}"
	    y="${parent.coalpower.y}"
	    resource="tool_nuclearpower_rsrc"
	    title="Nuclear Power"
	/>


    </class>


</library>
