		    <view
			datapath="ds_histories:/histories/history"
			width="${parent.width}"
			height="${classroot.legendItemHeight}"
			bgcolor="${this.color}"
		    >


			<attribute name="label" type="string" value="$path{'@label'}"/>
			<attribute name="description" type="string" value="$path{'@description'}"/>
			<attribute name="typeString" type="string" value="$path{'@type'}"/>
			<attribute name="colorString" type="string" value="$path{'@color'}"/>
			<attribute name="rangeString" type="string" value="$path{'@range'}"/>
			<attribute name="type" type="number" value="${parseInt(this.typeString)}"/>
			<attribute name="color" type="number" value="${parseInt(this.colorString)}"/>
			<attribute name="range" type="number" value="${parseInt(this.rangeString)}"/>


			<handler name="ondata" args="arg"><![CDATA[
			    var value = 
				gApp.indexOf(classroot.historyTypes, this.type) >= 0;
			    this.cb.setAttribute("value", value);
			    var attributes = this.data.attributes;
			    //Debug.write(attributes);
			    this.setAttribute("label", attributes['label']);
			    this.setAttribute("description", attributes['description']);
			    this.setAttribute("type", parseInt(attributes['type']));
			    this.setAttribute("color", parseInt(attributes['color']));
			    this.setAttribute("range", parseInt(attributes['range']));
			  ]]>
			</handler>


			<mycheckbox name="cb"
			    x="${classroot.border}"
			    y="${classroot.border}"
			    width="${parent.width - (2 * classroot.border)}"
			    height="${parent.height - (2 * classroot.border)}"
			    text="${parent.label}"
			    bgcolor="0xffffff"
			>

			    <handler name="onchanged" args="arg"><![CDATA[
				if (!this.inited) {
				    //Debug.write("History checkbox ONCHANGED too early", this, this.value);
				    return;
				}
				//Debug.write("==== History checkbox ONCHANGED", this, this.value);
				if (this.value) {
				    classroot.addHistoryType(parent.type);
				} else {
				    classroot.removeHistoryType(parent.type);
				}
			      ]]>
			    </handler>

			</mycheckbox>

		    </view>

	        </view>

		<radiogroup name="timeScale"
		    width="${parent.width}"
		    layout="class:simplelayout; axis:y; spacing:1"
